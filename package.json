{
  "name": "express-server-render-starter",
  "private": true,
  "version": "1.0.0",
  "description": "A starter project for server-rendered Express applications using Nunjucks, TailwindCSS and Postgres",
  "main": "bin/start.js",
  "scripts": {
    "test": "xo",
    "lint": "xo",
    "format": "xo --fix",
    "//prestart": "yarn build",
    "start": "node ./bin/start.js",
    "predev": "yarn tw",
    "dev": "nodemon ./bin/start.js",
    "tw": "tailwind build src/styles/app.css -o public/app.css",
    "purge": "purgecss -c purgecss.config.js -o ./public",
    "build": "yarn tw && yarn purge",
    "seed": "node ./bin/seed.js",
    "migrate": "node ./bin/migrate.js",
    "migrate:create": "migrate create --migrations-dir='./src/migrations'"
  },
  "keywords": [
    "express",
    "nunjucks",
    "tailwindcss"
  ],
  "author": "Hugo Di Francesco",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.2",
    "bcrypt": "^4.0.1",
    "cheerio": "^1.0.0-rc.3",
    "client-sessions": "^0.8.0",
    "cloudinary": "^1.22.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "mapbox-gl": "^1.11.0",
    "migrate": "^1.6.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "node-geocoder": "^3.27.0",
    "nunjucks": "^3.2.1",
    "pg": "^8.0.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "sql-template-strings": "^2.2.2",
    "typeface-roboto": "0.0.75",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "nodemon": "^2.0.3",
    "purgecss": "^2.1.2",
    "tailwindcss": "^1.2",
    "xo": "^0.29.1"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {}
  },
  "nodemonConfig": {
    "ext": "js,html"
  }
}
